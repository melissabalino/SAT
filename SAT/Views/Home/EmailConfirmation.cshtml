@model SAT.UI.MVC.Models.ContactViewModel

@{
    ViewData["Title"] = "Email Confirmation page";
}

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="email">
        <div class="container text-center" data-aos="fade-up">
            <div class="section-title bg-primary text-dark rounded p-2">
                <h1 class="p-2 bg-light rounded col-md-4 offset-4">Message Sent!</h1>
                <div class="info rounded">
                    <h3 class="p-2 bg-light text-dark mt-2 col-md-8 offset-2 rounded">
                        Thank you for contacting us! A member of our team will respond to your message
                        using the provided email address -- @Model.Email -- within the next 1-3 business days.
                    </h3>
                    <h5 class="bg-light text-dark mt-2 col-md-4 p-2 offset-md-4 rounded">
                        You sent the following message on
                        @DateTime.Now.Date.ToShortDateString() at
                        @DateTime.Now.ToShortTimeString() :
                    </h5>
                    <h6 class="p-5 bg-light mb-3 mt-2 mb-2 text-dark col-md-6 offset-3 rounded">
                        @Model.Message
                    </h6>
                </div>
            </div>

        </div>
    </section><!-- End Contact Section -->

