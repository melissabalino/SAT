@{
    ViewData["Title"] = "Contact page";
}

@model SAT.UI.MVC.Models.ContactViewModel


<!-- ======= Breadcrumbs ======= -->
<div id="contact-us" class="breadcrumbs offset-1 mb-2" data-aos="fade-in">
    <div class="container">
        <h2>Ready for a new career?</h2>
        <p class="col-md-8 offset-2 p-2">Fill out our form if you would like some more information. We'll get back to you soon to talk about more possibilities and the great future ahead!</p>
    </div>
</div><!-- End Breadcrumbs -->
<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
    <div data-aos="fade-up">
        <iframe id="contact-us" style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
    </div>

    <div class="container" data-aos="fade-up">

        <div class="row mt-5">

            <div class="col-lg-4">
                <div class="info">
                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>Location:</h4>
                        <p>
                            789 Innovation Street <br>
                            Kansas City, MO 65432
                            United States
                        </p>
                    </div>

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>info@api.com</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Call:</h4>
                        <p>+1 (555) 123-4567</p>
                    </div>

                </div>

            </div>

            <div class="col-lg-8 mt-5 mt-lg-0">

                <form asp-action="Contact" class="php-email-form p-2 rounded">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            @*<label asp-for="Name" class="control-label"></label>*@
                            <input asp-for="Name" class="form-control" id="name" placeholder="Your Name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            @*<label asp-for="Email" class="control-label"></label>*@
                            <input asp-for="Email" class="form-control" id="email" placeholder="Your Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        @*<label asp-for="Subject" class="control-label"></label>*@
                        <input asp-for="Subject" class="form-control" id="subject" placeholder="Subject" required />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="my-3">
                        @*<label asp-for="Message" class="control-label"></label>*@
                        <textarea asp-for="Message" class="form-control" rows="5" placeholder="Message" required></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <div class="text-center pb-2 my-3">
                        <button type="submit">Send Message</button>
                    </div>
                </form>

            </div>

        </div>

    </div>
</section><!-- End Contact Section -->
